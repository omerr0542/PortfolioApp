@model Category
@{
    ViewData["Title"] = "Yeni Kategori Oluştur";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h1>CreateCategory</h1>

<form asp-action="CreateCategory" method="post">
    <div class="form-group">
        <label>Kategori Adı</label>
        <input type="text" class="form-control" asp-for="CategoryName" />
    </div>
    <button type="submit" class="btn btn-outline-primary">Kaydet</button>
</form>