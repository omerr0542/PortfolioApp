@model Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form asp-action="UpdateCategory" method="post">
    <input type="hidden" asp-for="CategoryId" />
    <div class="form-group">
        <label asp-for="CategoryName">Kategori Adı</label>
        <input type="text" class="form-control" asp-for="CategoryName" />
    </div>
    <button type="submit" class="btn btn-outline-primary">Güncelle</button>
</form>