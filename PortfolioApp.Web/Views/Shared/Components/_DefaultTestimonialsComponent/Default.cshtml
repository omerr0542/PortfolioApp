@model List<Testimonial>
@*
_DefaultTestimonialsComponent
*@


<section id="testimonials" class="testimonials section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Referanslarım</h2>
    </div><!-- End Section Title -->
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="swiper init-swiper">
            <script type="~/Kelly-1.0.0/application/json" class="swiper-config">
                {
                  "loop": true,
                  "speed": 600,
                  "autoplay": {
                    "delay": 5000
                  },
                  "slidesPerView": "auto",
                  "pagination": {
                    "el": ".swiper-pagination",
                    "type": "bullets",
                    "clickable": true
                  }
                }
            </script>
            <div class="swiper-wrapper">

                @foreach (var testimonial in Model)
                {
                    <div class="swiper-slide">
                        <div class="testimonial-item">
                            @* <img src="~/Kelly-1.0.0/assets/img/testimonials/testimonials-1.jpg" class="testimonial-img" alt=""> *@
                            <h3>@String.Join(" ", testimonial.Name, testimonial.Surname)</h3>
                            <h4>@testimonial.Title</h4>
                            <div class="stars">
                                @for (int i = 0; i < testimonial.Review; i++)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                            </div>
                            <p>
                                <i class="bi bi-quote quote-icon-left"></i>
                                <span>@testimonial.Comment</span>
                                <i class="bi bi-quote quote-icon-right"></i>
                            </p>
                        </div>
                    </div>
                }
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</section>