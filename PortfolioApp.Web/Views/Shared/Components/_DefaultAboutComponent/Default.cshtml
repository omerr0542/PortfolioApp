@model About
@*
    _DefaultAboutComponent
*@

<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>
        <p></p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="@Url.Content(Model.ImageUrl)" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
                <h2>@Model.Title</h2>
                <p class="fst-italic py-3">
                    @Model.Description
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>@Model.BirthDate.ToString("d MMM yyyy", System.Globalization.CultureInfo.InvariantCulture)</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span> <a href="https://@Model.WebSite">@Model.WebSite</a> </span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@Model.PhoneNumber</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@Model.City</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@Model.Age</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>@Model.Degree</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span> <a href="mailto:@Model.Email"> @Model.Email</a></span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span> @(Model.IsAvaliableForFreelance ? "Uygun" : "Uygun Değil") </span></li>
                        </ul>
                    </div>
                </div>
                <p class="py-3">

                </p>
            </div>
        </div>

    </div>

</section>