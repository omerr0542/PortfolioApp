@model Project
@{
    ViewData["Title"] = "CreateProject";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <div class="form-group">
        <label>Proje Görsel Url</label>
        <input text="text" class="form-control" asp-for="ImageUrl" />
        <span class="form-text text-danger" asp-validation-for="ImageUrl"></span>
    </div>

    <div class="form-group">
        <label>Proje Adı</label>
        <input text="text" class="form-control" asp-for="ProjectName" />
        <span class="form-text text-danger" asp-validation-for="ProjectName"></span>
    </div>

    <div class="form-group">
        <label>Proje Açıklaması</label>
        <textarea text="text" class="form-control" asp-for="Description" rows="4"></textarea>
        <span class="form-text text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label>GitHub Url</label>
        <input text="text" class="form-control" asp-for="GitHubUrl" />
        <span class="form-text text-danger" asp-validation-for="GitHubUrl"></span>
    </div>

    <div class="form-group">
        <label>Kategori</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.categories">
            <option disabled selected>Kategori Seçiniz</option>
        </select>
        <span class="form-text text-danger" asp-validation-for="CategoryId"></span>
    </div>

    <button class="btn btn-outline-primary">Kaydet</button> 
</form>